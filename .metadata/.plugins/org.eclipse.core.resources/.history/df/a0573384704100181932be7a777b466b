package com.Frameworkbasics5.Cva;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.Buffer;

public class TextFiles {
	
public  void m1() throws IOException {
	File f= new File("C:\\Users\\HP\\eclipse-workspace\\FrameworkBasics\\src\\com\\Frameworkbasics5\\Cva\\Textfile1");
	boolean b= f.createNewFile();
	if (b) {
		System.out.println("file is created ");
		
	}
	else 
		System.out.println("returns existing file");
	
	
	FileWriter fw = new FileWriter(f);
	BufferedWriter bw= new BufferedWriter(fw);
	
	bw.write("All is well");
	bw.newLine();
	bw.write("success");
	bw.newLine();
	bw.write("practice well");
	bw.newLine();
	bw.write("job");
	
	bw.flush();
	
}

}
